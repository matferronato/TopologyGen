sudo ip addr add 9.9.9.2/24 dev eth100
sudo ip link set eth100 up
sudo ifconfig eth100 9.9.9.2/24 up
sudo ip addr add 10.10.10.1/24 dev eth101
sudo ip link set eth101 up
sudo ifconfig eth101 10.10.10.1/24 up
sudo sysctl -w net.ipv4.ip_forward=1
